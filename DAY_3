#include <stdio.h>

int main(){
    int seats[20] = {0};
    int seatno, choice;

    while(1){
        printf("\n~~~~~~~~Ticket System~~~~~~~~~~~~\n");
        printf("1.Show Tickets\n");
        printf("2.Book Ticket\n");
        printf("3.Cancel Ticket\n");
        printf("4.Exit\n");
        printf("Enter choice\t");
        scanf("%d", &choice);

        switch(choice){

            case 1:
            printf("\nSeats Status (0 = Empty, 1 + Booked):\n");
            for(int i = 0; i < 10; i++){
                printf("Seats %d : %d\n", i+1, seats[i]);
            }
            break;

            case 2:
            printf("Enter seat number to bok (1-20)");
            scanf("%d", &seatNo);

            if(seatNo < 1|| seatNo > 20)
            printf("Invalid seat number!\n");
        else if(seats[seatNo-1]==1)
        printf("Seat already booked!\n");
        }
    }
};
